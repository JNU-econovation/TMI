<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 추가 정보"
        android:textSize="36dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/detail_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 추가 정보를 입력합니다."
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">
    </TextView>
    <EditText
        android:id="@+id/religion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="종교"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/detail_info_text"
        tools:ignore="MissingConstraints">
    </EditText>
    <EditText
        android:id="@+id/drinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="음주빈도"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/religion"
        tools:ignore="MissingConstraints">
    </EditText>
    <EditText
        android:id="@+id/smoking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="흡연여부"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/drinking"
        tools:ignore="MissingConstraints">
    </EditText>
    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="키"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/smoking"
        tools:ignore="MissingConstraints">
    </EditText>
    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사는곳"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/height"
        tools:ignore="MissingConstraints">
    </EditText>
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/main"
        android:text="다음으로"
        android:textFontWeight="700"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>